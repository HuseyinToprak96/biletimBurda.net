@model IEnumerable<EntityLayer.Durak>

@{
    ViewBag.Title = "Duraklar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Duraklar</h2>
<table class="table">
    <tr>
        <td colspan="4"> @Html.ActionLink("Yeni Durak", "YeniDurakEkle")</td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DurakAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ilce.sehir.SehirAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ilce.IlceAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DurakAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ilce.sehir.SehirAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ilce.IlceAdi)
    </td>
    <td>
        @Html.ActionLink("Edit", "DurakGuncelle", new {id=item.DurakId }) |
        @Html.ActionLink("Details", "Details", new { id=item.DurakId}) |
        @Html.ActionLink("Delete", "DurakSil", new { id=item.DurakId })
    </td>
</tr>
}

</table>
